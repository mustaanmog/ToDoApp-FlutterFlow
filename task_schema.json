{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "title": "Task Document",
  "type": "object",
  "properties": {
    "completed": {
      "type": "boolean"
    },
    "created": {
      "type": "string",
      "format": "date-time"
    },
    "details": {
      "type": "string"
    },
    "title": {
      "type": "string"
    },
    "user": {
      "type": "string",
      "pattern": "^/users/[A-Za-z0-9_-]+$",
      "description": "Reference to a user document"
    }
  },
  "required": [
    "completed",
    "created",
    "title",
    "user"
  ],
  "additionalProperties": false
}
