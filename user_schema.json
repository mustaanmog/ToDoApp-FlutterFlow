{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "title": "User Document",
  "type": "object",
  "properties": {
    "birthday": {
      "type": "string",
      "format": "date-time",
      "description": "Firestore timestamp as ISO 8601 string"
    },
    "created_time": {
      "type": "string",
      "format": "date-time"
    },
    "display_name": {
      "type": "string"
    },
    "email": {
      "type": "string",
      "format": "email"
    },
    "favorite_animal": {
      "type": "string"
    },
    "photo_url": {
      "type": "string",
      "format": "uri"
    },
    "uid": {
      "type": "string"
    }
  },
  "required": [
    "created_time",
    "display_name",
    "email",
    "uid"
  ],
  "additionalProperties": false
}
